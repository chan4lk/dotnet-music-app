@using Chinook.Core
@inherits LayoutComponentBase

<PageTitle>Chinook</PageTitle>

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4 auth">
            <LoginDisplay />
        </div>

        <article class="content px-4">
            <ErrorBoundary @ref="errorBoundary">
                <ErrorContent Context="exception">
                    <p class="errorUI">😈 @Constants.COMMON_EXCEPTION_MESSAGE</p>
                    <InfoMessage IsError="true" Message="@exception.Message"></InfoMessage>
                </ErrorContent>
                <ChildContent>
                    @Body
                </ChildContent>
            </ErrorBoundary>
        </article>
    </main>
</div>